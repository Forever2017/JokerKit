<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/JokerNavigationImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minHeight="@dimen/length_40"
        android:minWidth="@dimen/length_40"
        android:scaleType="fitXY"
        android:src="@drawable/ico_joker" />

    <TextView
        android:id="@+id/JokerNavigationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="测试"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/JokerNavigationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:background="@drawable/joker_round_red"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="15"
        android:textColor="@color/white"
        android:textSize="@dimen/length_20" />

</RelativeLayout>
