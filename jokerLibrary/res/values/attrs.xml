<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="TitlStyleJoker">
        <!--标题栏背景色-->
        <attr name="title_background_color" format="color"></attr>
        <!--标题栏文字-->
        <attr name="title" format="string" />
        <!--标题栏字体大小-->
        <attr name="title_text_size" format="dimension"></attr>
        <!--标题栏字体颜色-->
        <attr name="title_text_color" format="color"></attr>

        <!--左键是否隐藏，默认显示-->
        <attr name="left_visible" format="boolean"></attr>
        <!--是否默认点击关闭（默认点击退出，设置为false后，手动调用）-->
        <attr name="left_close" format="boolean"></attr>
        <!--左键显示文字-->
        <attr name="left_text" format="string" />
        <!--左键字体颜色-->
        <attr name="left_text_color" format="color"></attr>


        <!--右键是否显示 默认隐藏-->
        <attr name="right_visible" format="boolean"></attr>
        <!--右键显示文字-->
        <attr name="right_text" format="string" />
        <!--右键字体颜色-->
        <attr name="right_text_color" format="color"></attr>
    </declare-styleable>


</resources>